<div class="container-fluid">
<div id="imgWrap"><img src="../assets/images/burger.jpeg" alt="Picture of Burger"></div>

<h1>Eat-Da Burger!</h1>

<div class="row">
<div class="col">
  <h3>Burgers to Devour</h3>
<ul>
  {{#each burgers}}
    {{#unless devour}}
    {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col">
  <h3>Devoured Burgers</h3>
<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<form class="create-form">

  <div class="form-group">`
    <label for="ca"></label>
    <textarea autofocus id="ca" name="name"></textarea>
  </div>

  <button id="submitBtn" type="submit">Add A Burger</button>
  <p id="formDir">Enter A Burger You Want; Then, Press "Add-A-Burger" Button.</p>
</form>

</div>